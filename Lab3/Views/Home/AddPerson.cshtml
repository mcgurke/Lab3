@model Lab3.Models.Person
<form asp-action="AddPerson" method="post">
    <h1>Add Person</h1>
    <div>       
        First Name <input type="text" name="firstname" asp-for="FirstName"/><br />
        <span asp-validation-for="FirstName" class="text-danger"></span><br />
        Last Name <input type="text" name="lastname" asp-for="LastName"/><br />
        <span asp-validation-for="LastName" class="text-danger"></span><br />
        Birthday <input type="date" name="birthdate" asp-for="BirthDate"/><br />
        <span asp-validation-for="BirthDate" class="text-danger"></span><br />
        <input type="submit" class="btn btn-default"/>
    </div>
</form>